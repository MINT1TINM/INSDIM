extends layout

block content
  section
    h1= __("news")
    
    each item in newsList
      div(class="news-item")
        div(class="news-title")= item.title
        span= item.createTimeFormat
        if locale=='en'
          p!= item.introEn
        else
          p!= item.intro
        a(href="/news/"+item._id class="news-link")
          span= __("learnMore")

      hr