extends layout

block content
  section
    h1 #{__("collection")} - #{year}
    div(class="grid-wrapper")    
      each item in workList  
        div(class="grid-item")
          a(href="/collection/"+year+"/"+item._id)
            div(class="grid-title-mob")
              h3= item.title
              span for #{item.client}
          a(href="/collection/"+year+"/"+item._id)
            div(class="grid-box")
              div(class="grid-thumbnail")
                img(class="gallery-pic" src=item.titlePic.url )
        hr


  script(src="/js/grid.min.js")
  script(src="/js/lazyload.min.js")

