extends layout

block content
  section
    a(href="/collection/"+workDetail.year) 
      i(class="iconfont icon-iconarrowl") 
      span back to collection
    h1= workDetail.title
    h4(class="mb-50")= workDetail.client

    div(class="description mt-50 mb-50")
      p!= workDetail.description

    each item in workDetail.pic
      div(class="gallery-item")
        img(class="gallery-pic" src=item.url)



