extends layout

block content
  section
    a(href="/collection/"+workDetail.year) 
      i(class="iconfont icon-iconarrowl") 
      span(class="back") back to collection
    h1= workDetail.title
    h4()= workDetail.client
    h5()= workDetail.type
    h5(class="mb-50")= workDetail.collaborator

    div(class="description mt-50 mb-50")
      p!= workDetail.description
    each item in workDetail.pic
      div(class="gallery-item")
        img(class="gallery-pic lazy" src="/img/lazy.gif" data-src=item.url)

  script(src="/js/lazyload.min.js")


